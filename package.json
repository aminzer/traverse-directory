{
  "name": "@aminzer/traverse-directory",
  "version": "1.0.0",
  "description": "Utility for directory child entries recursive iteration",
  "type": "module",
  "keywords": [
    "traverse",
    "directory",
    "fs",
    "filesystem",
    "file",
    "folder",
    "iterate",
    "recursion",
    "recursive"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aminzer/traverse-directory.git"
  },
  "license": "MIT",
  "author": "aminzer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "clean": "rimraf dist",
    "codestyle": "run-p lint typescript:check",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run rebuild",
    "rebuild": "run-s clean build",
    "test": "tsx --test src/**/*.test.ts",
    "typescript:check": "tsc --project tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
